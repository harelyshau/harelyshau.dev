<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <ResponsivePopover placement="Auto">
        <customHeader>
            <Toolbar style="Clear">
                <Title text="{Name}"/>                
                <ToolbarSpacer/>
                <Button tooltip="Close" press="onPressCloseCompanyPopover"
                    icon="{i18n>iClose}"/>
            </Toolbar>
        </customHeader>
        <content>
            <core:Fragment fragmentName="pharelyshau.fragment.Calendar.Appointment" type="XML"/>
        </content>
        <beginButton>
            <Button text="Edit" type="Emphasized" press="onPressEditAppointment"/>
        </beginButton>
        <endButton>
            <Button text="Delete" press="onPressDeleteAppointment"/>
        </endButton>
    </ResponsivePopover>
</core:FragmentDefinition>