<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Panel>
        <headerToolbar>
            <Toolbar height="3rem">
                <ToolbarSpacer/>
                <core:Icon src="{i18n>iInstructions}"/>
                <Title text="{i18n>ttlInstructions}"/>
                <ToolbarSpacer/>
            </Toolbar>
        </headerToolbar>
        <VBox class="sapUiTinyMarginTopBottom">
            <!-- Description -->
            <VBox>
                <HBox>
                    <core:Icon src="{i18n>iPuzzle}" class="sapUiTinyMarginEnd"/>
                    <Title titleStyle="H6" text="{i18n>ttlGameDescription}:" wrapping="true"/>
                </HBox>
                <Text text="{i18n>tMinesweeperDescription}"/>
            </VBox>
            <!-- Objective -->
            <VBox class="sapUiSmallMarginTop">
                <HBox>
                    <core:Icon src="{i18n>iGoal}" class="sapUiTinyMarginEnd"/>
                    <Title titleStyle="H6" text="{i18n>ttlObjective}:" wrapping="true"/>
                </HBox>
                <Text text="{i18n>tMinesweeperObjective}"/>
            </VBox>
            <!-- Gameplay -->
            <VBox class="sapUiSmallMarginTop">
                <HBox>
                    <core:Icon src="{i18n>iExample}" class="sapUiTinyMarginEnd"/>
                    <Title titleStyle="H6" text="{i18n>ttlGameplay}:" wrapping="true"/>
                </HBox>
                <Text text="{i18n>tMinesweeperGameplay}"/>
            </VBox>
        </VBox>
    </Panel>
</core:FragmentDefinition>