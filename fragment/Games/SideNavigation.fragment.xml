<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.tnt">
    <SideNavigation id="sideNavigation">
		<NavigationList itemSelect="onSelectNavigateToGame">
            <NavigationListItem icon="sap-icon://flag-2" text="{i18n>ttlMinesweeper}" key="Minesweeper"/>
            <NavigationListItem icon="{i18n>iHanoiTower}" text="{i18n>ttlHanoiTower}" key="HanoiTower"/>
            <NavigationListItem icon="{i18n>iTicTacToe}" text="{i18n>ttlTicTacToe}" key="TicTacToe"/>
		</NavigationList>
		<fixedItem>
			<NavigationList>
				<!-- Expand/Collapse/Close Button -->
				<NavigationListItem select="onPressToggleSideNavigation"
					text="{= ${device>/system/phone} ? ${i18n>btnClose} : ${view>/sideExpanded} ? 'Collapse' : 'Expand' }"
					icon="{= ${device>/system/phone} ? ${i18n>iClose} : ${view>/sideExpanded} ? 'sap-icon://close-command-field' : 'sap-icon://open-command-field' }"/>
			</NavigationList>
		</fixedItem>
	</SideNavigation>
</core:FragmentDefinition>