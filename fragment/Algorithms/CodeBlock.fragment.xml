<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:ce="sap.ui.codeeditor">
    <VBox id="blockCode" class="sapUiTinyMarginTopBottom">
        <Toolbar style="Clear" design="Transparent">
            <ToolbarSpacer />
            <Button text="{= ${Editable} ? 'Reset' : 'Edit' }" icon="{= ${Editable} ? 'sap-icon://reset' : 'sap-icon://edit' }" press="onPressEditResetCode"/>
            <Button text="Copy" icon="{i18n>iCopy}" press="onPressCopyCode"/>
            <Button text="Run" icon="sap-icon://media-play" press="onPressRunCode"/>
        </Toolbar>
        <ce:CodeEditor value="{Code}" maxLines="20" editable="{= !!${Editable} }"/>
    </VBox>
</core:FragmentDefinition>