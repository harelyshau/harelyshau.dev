<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:tnt="sap.tnt">
    <tnt:SideNavigation selectedKey="{/Article/ID}" id="sideNavigation">
		<tnt:NavigationList items="{/Articles}" itemSelect="onSelectNavigateToArticle">
			<tnt:NavigationListItem text="{Title}" icon="{Icon}" key="{ID}"
				items="{path: 'Articles', templateShareable: false}">
				<tnt:NavigationListItem text="{Title}" key="{ID}"/>
			</tnt:NavigationListItem>
		</tnt:NavigationList>
		<tnt:fixedItem>
			<tnt:NavigationList>
				<!-- Expand/Collapse/Close Button -->
				<tnt:NavigationListItem select="onPressToggleSideNavigation"
					text="{= ${device>/system/phone} ? ${i18n>btnClose} : ${view>/sideExpanded} ? 'Collapse' : 'Expand' }"
					icon="{= ${device>/system/phone} ? ${i18n>iClose} : ${view>/sideExpanded} ? 'sap-icon://close-command-field' : 'sap-icon://open-command-field' }"/>
			</tnt:NavigationList>
		</tnt:fixedItem>
	</tnt:SideNavigation>
</core:FragmentDefinition>