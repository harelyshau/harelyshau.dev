<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Panel>
        <headerToolbar>
            <Toolbar height="3rem">
                <ToolbarSpacer/>
                <core:Icon src="{i18n>iInstructions}"/>
                <Title text="{i18n>ttlInstructions}"/>
                <ToolbarSpacer/>
            </Toolbar>
        </headerToolbar>
        <VBox class="sapUiTinyMarginTopBottom">
            <!-- Description -->
            <VBox>
                <HBox>
                    <core:Icon src="{i18n>iPuzzle}" class="sapUiTinyMarginEnd"/>
                    <Title titleStyle="H6" text="{i18n>ttlGameDescription}:" wrapping="true"/>
                </HBox>
                <Text text="{i18n>tGameDescription}"/>
            </VBox>
            <!-- Objective -->
            <VBox class="sapUiSmallMarginTop">
                <HBox>
                    <core:Icon src="{i18n>iGoal}" class="sapUiTinyMarginEnd"/>
                    <Title titleStyle="H6" text="{i18n>ttlObjective}:" wrapping="true"/>
                </HBox>
                <Text text="{i18n>tHanoiTowerObjective}"/>
            </VBox>
            <!-- Rules -->
            <VBox class="sapUiSmallMarginTop">
                <HBox>
                    <core:Icon src="{i18n>iRules}" class="sapUiTinyMarginEnd"/>
                    <Title titleStyle="H6" text="{i18n>ttlRules}:" wrapping="true"/>
                </HBox>
                <Text text="{i18n>tHanoiTowerRule1}"/>
                <Text text="{i18n>tHanoiTowerRule2}"/>
            </VBox>
            <!-- Example -->
            <VBox class="sapUiSmallMarginTop">
                <HBox>
                    <core:Icon src="{i18n>iExample}"/>
                    <Title titleStyle="H6" text="{i18n>ttlExample}:" class="sapUiTinyMarginBegin"/>
                </HBox>
                <Image width="100%" src="./resource/image/HanoiTowerEx-{app>/theme}.jpg" class="sapUiTinyMarginTop"/>
            </VBox>
        </VBox>
    </Panel>
</core:FragmentDefinition>