<mvc:View controllerName="pharelyshau.controller.Sandbox"
	xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:ce="sap.ui.codeeditor"
	xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage class="sapUiNoContentPadding">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>ttlSandbox}" wrapping="true"/>
				</f:heading>
				<!-- <f:snappedContent>
					<Label text="{i18n>lShowsAppointmentsFor} {/Email}" wrapping="true"/>
				</f:snappedContent>
				<f:expandedContent>
					<Label text="{i18n>lShowsAppointmentsFor} {/Email}" wrapping="true"/>
				</f:expandedContent> -->
				<f:actions>
					<Button text="{i18n>btnSendEmail}" press="onPressSave" icon="{i18n>iEmail}"/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
            <l:ResponsiveSplitter defaultPane="code">
                <l:PaneContainer>
                    <l:SplitPane requiredParentWidth="400" id="code">
                        <l:layoutData>
                            <!-- <l:SplitterLayoutData size="{sizes>/pane1}" /> -->
                        </l:layoutData>
                        <Page>
                            <headerContent>
                                <IconTabHeader mode="Inline" items="{/files}" select="onSelectFile">
                                    <items>
                                        <IconTabFilter key="{name}" text="{name}"/>
                                    </items>
                                </IconTabHeader>
                            </headerContent>
                            <ce:CodeEditor value="{/selectedFile/value}" syntaxHints="false" height="100%"/>
                        </Page>
                    </l:SplitPane>
                    <l:SplitPane requiredParentWidth="400" id="result">
                        <Panel height="300px" content="{/files}">
                            <Title text="{name}"></Title>
                        </Panel>
                    </l:SplitPane>
                </l:PaneContainer>
            </l:ResponsiveSplitter>
		</f:content>
	</f:DynamicPage>
</mvc:View>