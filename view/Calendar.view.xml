<mvc:View
    controllerName="pharelyshau.controller.Calendar"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:unified="sap.ui.unified">
	<f:DynamicPage class="phCalendarPage sapUiNoContentPadding">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Pavel's Calendar" wrapping="true"/>
				</f:heading>
				<f:snappedContent>
						<Label text="Shows appointments for {/Email}" wrapping="true"/>
					</f:snappedContent>
					<f:expandedContent>
						<Label text="Shows appointments for pavel@harelyshau.dev" wrapping="true"/>
					</f:expandedContent>
				<f:actions>
					<!-- Device Laptop -->
					<Button visible="{= !${device>/system/phone} &amp;&amp; ${device>/resize/width} > 550}"
						text="{i18n>btnSendEmail}" press="onPressSendEmail"
						icon="{i18n>iEmail}"/>
					<!-- All Devices -->
					<Button press="onPressOpenOverflowMenu" ariaHasPopup="Menu"
						icon="{= ${device>/system/phone} || 550 >= ${device>/resize/width} ? ${i18n>iMobileMenu} : ${i18n>iOverflowMenu} }"/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<VBox>
				<!-- <Toolbar design="Transparent" style="Clear">
					<Select class="sapUiTinyMarginBegin"/>
					<ToolbarSpacer/>
					<Button text="{i18n>btnMakeAppointment}" press="handleAppointmentCreate"
						icon="{i18n>iAppointment}" type="Emphasized" class="sapUiTinyMarginEnd"/>
				</Toolbar> -->
				<SinglePlanningCalendar id="calendar" busy="{calendarView>/busy}"
					fullDay="{calendarView>/fullDay}" startHour="{calendarView>/startHour}" endHour="{calendarView>/endHour}"
					stickyMode="NavBarAndColHeaders" appointments="{/Appointments}"
					startDateChange="onStartDateChange"
					moreLinkPress="onMoreLinkPress"
					enableAppointmentsCreate="true"
					class="phCalendar sapUiSmallMarginTop">
					<actions>
						<Button text="{i18n>btnMakeAppointment}" press="onPressTest"
						icon="{i18n>iAppointment}" type="Emphasized" class=""/>
					</actions>
					<appointments>
						<unified:CalendarAppointment
							title= "{Name}"
							text= "{text}"
							type= "{type}"
							icon= "{icon}"
							startDate= "{StartDate}"
							endDate= "{EndDate}">
						</unified:CalendarAppointment>
					</appointments>
				</SinglePlanningCalendar>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>