<mvc:View
    controllerName="pharelyshau.controller.Calendar"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:unified="sap.ui.unified">
	<f:DynamicPage class="phCalendarPage sapUiNoContentPadding">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>ttlPavelsCalendar}" wrapping="true"/>
				</f:heading>
				<f:snappedContent>
						<Label text="{i18n>lShowsAppointmentsFor} {/Email}" wrapping="true"/>
					</f:snappedContent>
					<f:expandedContent>
						<Label text="{i18n>lShowsAppointmentsFor} {/Email}" wrapping="true"/>
					</f:expandedContent>
				<f:actions>
					<!-- Device Laptop -->
					<Button visible="{= !${device>/system/phone} &amp;&amp; ${device>/resize/width} > 550}"
						text="{i18n>btnSendEmail}" press="onPressSendEmail"
						icon="{i18n>iEmail}"/>
					<!-- All Devices -->
					<Button press="onPressOpenOverflowMenu" ariaHasPopup="Menu"
						icon="{= ${device>/system/phone} || 550 >= ${device>/resize/width} ? ${i18n>iMobileMenu} : ${i18n>iOverflowMenu} }"/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<VBox>
				<SinglePlanningCalendar id="calendar" busy="{view>/busy}"
					fullDay="{view>/fullDay}" startHour="{view>/startHour}" endHour="{view>/endHour}"
					stickyMode="NavBarAndColHeaders" appointments="{/Appointments}"
					appointmentCreate="onAppointmentCreateOpenDialog"
					startDateChange="onStartDateChangeCalendar"
					moreLinkPress="onMoreLinkPress"
					enableAppointmentsCreate="true"
					class="phCalendar sapUiTinyMarginTop">
					<actions>
						<ToggleButton tooltip="{= ${view>/fullDay} ? ${i18n>btnShowWorkingHours} : ${i18n>btnShowFullDay} }" icon="sap-icon://create-entry-time" press="onPressToggleFullDay"
							pressed="{view>/fullDay}"/>
						<Button text="{= ${device>/system/phone} || 420 >= ${device>/resize/width}  ? ${i18n>btnMake} : ${i18n>btnMakeAppointment} }"
							press="onPressOpenAppointmentDialog" icon="{i18n>iAppointment}"
							type="Emphasized" class="phResponsiveMarginEnd"/>
					</actions>
					<appointments>
						<unified:CalendarAppointment
							title= "{Name}"
							text= "{Description}"
							type= "{type}"
							icon= "{icon}"
							startDate= "{StartDate}"
							endDate= "{EndDate}">
						</unified:CalendarAppointment>
					</appointments>
				</SinglePlanningCalendar>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>