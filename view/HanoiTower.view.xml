<mvc:View xmlns:core="sap.ui.core"
    controllerName="pharelyshau.controller.HanoiTower"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:unified="sap.ui.unified">
	<f:DynamicPage class="">
        <!-- HEADER -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Hanoi Tower" wrapping="true"/>
				</f:heading>
				<f:snappedContent>
                    <Label text="Let's play Hanoi Tower" wrapping="true"/>
                </f:snappedContent>
                <f:expandedContent>
                    <Label text="Let's play Hanoi Tower" wrapping="true"/>
                </f:expandedContent>
				<f:actions>
					<Button press="onPressOpenOverflowMenu" ariaHasPopup="Menu"
						icon="{= ${device>/system/phone} || 550 >= ${device>/resize/width}
                            ? ${i18n>iMobileMenu} : ${i18n>iOverflowMenu} }"/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<VBox class="phLimitedPageContent" alignItems="Center" renderType="Bare" >
                <Panel height="100%" class="sapUiMediumMarginBottom">
                    <headerToolbar>
                        <Toolbar height="3rem">
                            <Title text="Discs:"/>
                            <Select items="{/Discs}" selectedKey="{/SelectedDiscs}"
                                change="onChangeDiscs" class="sapUiTinyMarginBegin">
                                <core:Item text="{}" key="{}"/>
                            </Select>
                            <ToolbarSpacer/>
                            <Title text="Your moves: {/Moves}" class="sapUiTinyMarginEnd"/>
                        </Toolbar>
                    </headerToolbar>
                    <HBox items="{/Rods}" width="100%" justifyContent="Center" class="sapUiSmallMarginTopBottom">
                        <VBox items="{}" alignItems="Center" justifyContent="End"
                            class="sapUiSmallMarginBeginEnd phBackgroundImageRod" width="30%">
                            <VBox renderType="Bare">
                                <Button text="{path: '', formatter: '.formatter.discSize'}"
                                    type="{path: '', formatter: '.formatter.discType'}" icon="false"/>
                            </VBox>
                        </VBox>
                    </HBox>
                </Panel>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>