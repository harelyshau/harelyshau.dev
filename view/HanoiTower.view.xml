<mvc:View xmlns:core="sap.ui.core"
    controllerName="pharelyshau.controller.HanoiTower"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
    core:require="{formatter: 'pharelyshau/model/formatter'}"
    xmlns:dnd="sap.ui.core.dnd">
	<f:DynamicPage class="">
        <!-- HEADER -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Hanoi Tower" wrapping="true"/>
				</f:heading>
				<f:snappedContent>
                    <Label text="Let's play Hanoi Tower" wrapping="true"/>
                </f:snappedContent>
                <f:expandedContent>
                    <Label text="Let's play Hanoi Tower" wrapping="true"/>
                </f:expandedContent>
				<f:actions>
					<Button press="onPressOpenOverflowMenu" ariaHasPopup="Menu"
						icon="{= ${device>/system/phone} || 550 >= ${device>/resize/width}
                            ? ${i18n>iMobileMenu} : ${i18n>iOverflowMenu} }"/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<VBox class="phLimitedPageContent" alignItems="Center" renderType="Bare" >
                <Panel id="panel" height="100%" class="sapUiMediumMarginBottom">
                    <!-- HEADER TOOLBAR -->
                    <headerToolbar>
                        <OverflowToolbar height="3rem">
                            <!-- Disc Counts -->
                            <!-- <HBox alignItems="Center" renderType="Bare"> -->
                                <Label id="lblDiscs" text="Discs:">
                                    <layoutData>
                                        <OverflowToolbarLayoutData priority="Low"/>
                                    </layoutData>
                                </Label>
                                <Select items="{/DiscCounts}" selectedKey="{path: '/DiscCount', type: 'sap.ui.model.type.Integer'}"
                                    change="onChangeDiscsCount" class="sapUiTinyMarginBegin" ariaLabelledBy="lblDiscs">
                                    <core:ListItem text="{}" key="{}" icon="{parts: ['', '/Records'], formatter: 'formatter.discCountIcon'}"/>
                                    <layoutData>
                                        <OverflowToolbarLayoutData priority="Low"/>
                                    </layoutData>
                                </Select>
                            <ToolbarSpacer/>
                            <!-- Time and Moves -->
                            <core:Icon src="sap-icon://fob-watch"/>
                            <Title text="Time: {/Time} sec"/>
                            <core:Icon src="sap-icon://step" class="sapUiSmallMarginBegin"/>
                            <Title text="Moves: {/Moves}"/>
                            <ToolbarSpacer/>
                            <!-- Buttons -->
                            <Button text="Restart" press="onPressRestartGame" icon="sap-icon://restart"/>
                            <Button text="Records" press="onPressOpenRecordsDialog" icon="sap-icon://competitor"/>
                        </OverflowToolbar>
                    </headerToolbar>
                    <!-- PLAYGROUND -->
                    <HBox items="{/Pegs}" wrap="Wrap" width="100%" justifyContent="Center" class="sapUiSmallMarginTopBottom">
                        <VBox width="{= 100 / ${/Pegs}.length }%" alignItems="Center" justifyContent="End">
                            <!-- Peg -->
                            <CustomListItem type="{= !${}.length ? 'Inactive' : 'Active'}" press="onPressMoveDiscByBox"
                                selected="{= ${} === ${view>/selectedPeg} }">
                                <VBox renderType="Bare" items="{path: '', templateShareable: true}" class="phPegBox" alignItems="Center" fieldGroupIds="pegs"
                                    width="100%" height="{= !${view>/pegBoxHeight} ? '100%' : ${view>/pegBoxHeight} + 'px' }" justifyContent="End">
                                    <!-- Disc -->
                                    <Button width="{parts: ['', '/DiscCount', 'view>/discButtonMaxWidth'], formatter: 'formatter.discWidth'}"
                                        text="{}" type="{path: '', formatter: 'formatter.discType'}"
                                        press="onPressFirePegPress" class="phButton phDiscButton"/>
                                </VBox>
                                <layoutData>
                                    <FlexItemData minWidth="100%" />
                                </layoutData>
                            </CustomListItem>
                            <!-- Buttons -->
                            <VBox items="{path: '/Pegs', templateShareable: true}" class="sapUiSmallMarginTop">
                                <Button press="onPressMoveDiscByButton" text="to {= ${/Pegs}.indexOf(${}) + 1 }"
                                    core:require="{moveButtonVisible: 'pharelyshau/model/formatMoveButtonVisible'}"
                                    visible="{path: '', formatter: 'moveButtonVisible'}"/>
                            </VBox>
                            
                        </VBox>
                    </HBox>
                    <Toolbar style="Clear">
                        <HBox visible="false">
                            <Label text="Show buttons" wrapping="true"/>
                            <Switch state="true" customTextOn=" " customTextOff=" "/>
                        </HBox>
                        <ToolbarSpacer/>
                        <Label wrapping="true" text="Min moves to win: {= Math.pow(2, ${/DiscCount}) - 1 }"/>
                    </Toolbar>
                </Panel>
                <!-- INSTRUCTIONS -->
                <Panel>
                    <headerToolbar>
                        <Toolbar height="3rem">
                            <ToolbarSpacer/>
                            <core:Icon src="sap-icon://activity-items"/>
                            <Title text="Instructions"/>
                            <ToolbarSpacer/>
                        </Toolbar>
                    </headerToolbar>
                    <Text text="The Tower of Hanoi (also called The problem of Benares Temple or Tower of Brahma or Lucas' Tower and sometimes pluralized as Towers, or simply pyramid puzzle) is a mathematical game or puzzle consisting of three rods and a number of disks of various diameters, which can slide onto any rod. The puzzle begins with the disks stacked on one rod in order of decreasing size, the smallest at the top, thus approximating a conical shape. The objective of the puzzle is to move the entire stack to the last rod, obeying the following rules:"/>
                    <Text text="1) Only one disk may be moved at a time. Each move consists of taking the upper disk from one of the stacks and placing it on top of another stack or on an empty rod. No disk may be placed on top of a disk that is smaller than it."/>
                </Panel>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>