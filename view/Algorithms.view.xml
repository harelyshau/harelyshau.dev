<mvc:View
    controllerName="pharelyshau.controller.Algorithms"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt">
	<tnt:ToolPage id="page" class="phAlgorithmsPage">
		<tnt:sideContent>
			<core:Fragment fragmentName="pharelyshau.fragment.Algorithms.SideNavigation" type="XML"/>
		</tnt:sideContent>
		<tnt:mainContents>
			<f:DynamicPage busy="{view>/busy}">
				<!-- HEADER -->
				<f:title>
					<f:DynamicPageTitle>
						<f:heading>
							<Title wrapping="true"
								text="{= ${/Article/Title} || ${i18n>ttlAlgorithms} }"/>
						</f:heading>
						<f:snappedContent>
							<Label visible="{= !${/Article/NotFound} }" text="{/Article/Description}" wrapping="true"/>
						</f:snappedContent>
						<f:expandedContent>
							<Label visible="{= !${/Article/NotFound} }" text="{/Article/Description}" wrapping="true"/>
						</f:expandedContent>
						<f:actions>
							<Button icon="{i18n>iMenu}" press="onPressToggleSideNavigation"/>
						</f:actions>
					</f:DynamicPageTitle>
				</f:title>
				<f:content>
					<VBox binding="{/Article}" renderType="{= !${NotFound} ? 'Div' : 'Bare' }" justifyContent="SpaceBetween" height="100%">
						<VBox visible="{= !${NotFound} }"
							items="{ path: 'Contents', factory:'.factoryBlocks' }"
							class="sapUiMediumMarginBottom phLimitedPageContent">
							<dependents>
								<core:Fragment fragmentName="pharelyshau.fragment.Algorithms.CodeBlock" type="XML"/>
								<core:Fragment fragmentName="pharelyshau.fragment.Algorithms.MainBlock" type="XML"/>
							</dependents>
						</VBox>
						<Toolbar visible="{= !!${Previous} || !!${Next} }"
							style="Clear" design="Transparent"
							class="sapUiSmallMarginBottom">
							<Button visible="{= !!${Previous} }"
								text="Previos" icon="sap-icon://navigation-left-arrow"
								press="navigateToArticle(${Previous})"/>
							<ToolbarSpacer/>
							<Button visible="{= !!${Next} }"
								iconFirst="false" text="Next"
								icon="sap-icon://navigation-right-arrow"
								press="navigateToArticle(${Next})"/>
						</Toolbar>
						<!-- Not Found -->
						<IllustratedMessage visible="{= !!${NotFound} }"
							illustrationType="sapIllus-PageNotFound"
							title="Sorry, we can't find this article"
							enableVerticalResponsiveness="true">
							<additionalContent>
								<Button icon="{i18n>iAlgorithms}" text="Go to Algorithms" press="onPressNavigateToPage('Algorithms')"/>
							</additionalContent>
						</IllustratedMessage>
					</VBox> 
				</f:content>
			</f:DynamicPage>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>