<mvc:View
    controllerName="pharelyshau.controller.Algorithms"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt">
	<tnt:ToolPage id="page" class="phAlgorithmsPage">
		<tnt:sideContent>
			<core:Fragment fragmentName="pharelyshau.fragment.Algorithms.SideNavigation" type="XML"/>
		</tnt:sideContent>
		<tnt:mainContents>
			<f:DynamicPage>
				<!-- HEADER -->
				<f:title>
					<f:DynamicPageTitle>
						<f:heading>
							<Title wrapping="true"
								text="{= ${/Article} !== 'NotFound' ? ${/Article/Title} : ${i18n>ttlAlgorithms} }"/>
						</f:heading>
						<f:snappedContent>
							<Label visible="{= ${/Article} !== 'NotFound' }" text="{/Article/Description}" wrapping="true"/>
						</f:snappedContent>
						<f:expandedContent>
							<Label visible="{= ${/Article} !== 'NotFound' }" text="{/Article/Description}" wrapping="true"/>
						</f:expandedContent>
						<f:actions>
							<Button icon="{i18n>iMenu}" press="onPressToggleSideNavigation"/>
						</f:actions>
					</f:DynamicPageTitle>
				</f:title>
				<f:content>
					<!-- Not Found -->
					<IllustratedMessage visible="{= ${/Article} === 'NotFound' }"
						illustrationType="sapIllus-PageNotFound"
						title="Sorry, we can't find this article"
						enableVerticalResponsiveness="true">
						<additionalContent>
							<Button icon="{i18n>iAlgorithms}" text="Go to Algorithms" press="onPressNavigateToPage('Algorithms')"/>
						</additionalContent>
					</IllustratedMessage>
				</f:content>
			</f:DynamicPage>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>