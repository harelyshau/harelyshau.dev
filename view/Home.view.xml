<mvc:View
    controllerName="pharelyshau.controller.Home"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f">
	<f:DynamicPage>
        <f:header>
            <f:DynamicPageHeader pinnable="false" class="phHomePageHeader">
                <VBox class="sapUiLargeMarginTopBottom sapUiSmallMarginBeginEnd"  alignContent="Center" alignItems="Center">
                    <Title text="Progressive Web Application on OpenUI5"
                        textAlign="Center"
                        titleStyle="H1" wrapping="true" class="phTitle">
                        <layoutData>
                            <FlexItemData maxWidth="35rem"/>
                        </layoutData>
                    </Title>
                     <Button icon="{i18n>iGitHub}" text="{i18n>btnSeeCode}" press="onPressShowCode"
                        type="Emphasized" class="phButton phActionButton sapUiMediumMarginTop"/>
                    
                <!-- <VBox class="sapUiLargeMargin"  width="35rem"> -->
                    <!-- <Title text="{i18n>ttlWelcome}" class="phWhite"
                        titleStyle="H1" wrapping="true" />
                    <Title text="{i18n>ttlWelcome}" class="phWhite"
                        titleStyle="H2" wrapping="true" width="35rem"/>
                    <HBox class="sapUiMediumMarginTop">
                        <Button icon="{i18n>iGitHub}" text="{i18n>btnSeeCode}" press="onPressShowCode"
                            type="Emphasized" class="phButton phActionButton"/>
                        <Button icon="{i18n>iEmail}" text="{i18n>btnSendEmail}"
                            press="onPressSendEmail" class="phButton phActionButton sapUiMediumMarginBegin"/>
                    </HBox> -->
                    
                </VBox>
            </f:DynamicPageHeader>
        </f:header>
		<f:content>
			<VBox class="phLimitedPageContent sapUiSmallMarginBottom sapUiLargeMarginTop">
                <!-- WELCOME -->
                <Panel>
                    <IllustratedMessage illustrationType="tnt-Success" enableFormattedText="true"
                        title="{i18n>ttlWelcome}" description="{i18n>tWelcomeDescription}"
                        illustrationSize="{= ${device>/system/phone} || 370 > ${device>/resize/width}
                            ? 'Spot' : 'Auto' }">
                        <additionalContent>
                            <Button icon="{i18n>iEmail}" text="{i18n>btnSendEmail}"
                                press="onPressSendEmail" class="phButton"/>
                        </additionalContent>
                    </IllustratedMessage>
                </Panel>
                <!-- OVERVIEW -->
                <Panel class="sapUiSmallMarginTop">
                    <IllustratedMessage illustrationType="tnt-Mission" enableFormattedText="true"
                        title="{i18n>ttlOverview}" description="{i18n>tOverview}"
                        illustrationSize="{= ${device>/system/phone} || 370 > ${device>/resize/width}
                            ? 'Spot' : 'Auto' }">
                        <additionalContent>
                            <Button icon="{i18n>iGitHub}" text="{i18n>btnSeeCode}"
                                press="onPressShowCode" class="phButton"/>
                        </additionalContent>
                    </IllustratedMessage>
                </Panel>
                <!-- CALENDAR -->
                <Panel class="sapUiSmallMarginTop">
                    <IllustratedMessage illustrationType="sapIllus-EmptyCalendar"
                        title="{i18n>ttlCalendar}" description="{i18n>tCalendarOverview}"
                        illustrationSize="{= ${device>/system/phone} || 370 > ${device>/resize/width}
                            ? 'Spot' : 'Auto' }">
                        <additionalContent>
                            <Button icon="{i18n>iAppointment}" text="{i18n>btnMakeAppointment}"
                                press="onPressNavigateToPage('Calendar')" class="phButton"/>
                        </additionalContent>
                    </IllustratedMessage>
                </Panel>
                <!-- RESUME -->
                <Panel class="sapUiSmallMarginTop">
                    <IllustratedMessage illustrationType="sapIllus-ResizeColumn"
                        title="{i18n>ttlResume}" description="{i18n>tResumeOverview}"
                        illustrationSize="{= ${device>/system/phone} || 370 > ${device>/resize/width}
                            ? 'Spot' : 'Auto' }">
                        <additionalContent>
                            <Button icon="{i18n>iResume}" text="{i18n>btnSeeResume}"
                                press="onPressNavigateToPage('Resume')" class="phButton"/>
                        </additionalContent>
                    </IllustratedMessage>
                </Panel>
                <!-- HANOI TOWER -->
                <Panel class="sapUiSmallMarginTop">
                    <IllustratedMessage illustrationType="tnt-Company"
                        title="{i18n>ttlHanoiTower}" description="{i18n>tHanoiTowerOverview}"
                        illustrationSize="{= ${device>/system/phone} || 370 > ${device>/resize/width}
                            ? 'Spot' : 'Auto' }">
                        <additionalContent>
                            <Button icon="{i18n>iHanoiTower}" text="{i18n>btnPlayHanoiTower}"
                                press="onPressNavigateToPage('HanoiTower')" class="phButton"/>
                        </additionalContent>
                    </IllustratedMessage>
                </Panel>
                <!-- Contact form -->
                <Panel class="sapUiMediumMarginTop">
                    <HBox justifyContent="SpaceBetween" class="sapUiSmallMargin">
                        <VBox width="50%">
                            <Title text="Contact me" titleStyle="H2"/>
                            <!-- Subject -->
                            <VBox class="sapUiSmallMarginTop">
                                <Label text="{i18n>lSubject}" showColon="true" labelFor="inpName"/>
                                <Input id="inpName" valueLiveUpdate="true"
                                    placeholder="{i18n>phTopicToDiscuss}"/>
                            </VBox>
                            <!-- Message -->
                            <VBox class="sapUiSmallMarginTopBottom">
                                <Label text="{i18n>lMessage}" showColon="true" labelFor="inpDescription"/>
                                <TextArea id="inpDescription" width="100%" value="{Description}" valueLiveUpdate="true"
                                    rows="4" placeholder="{i18n>phAgenda}"/>
                            </VBox>
                            <HBox justifyContent="End">
                                <Button icon="{i18n>iAppointment}" text="{i18n>btnMakeAppointment}"
                                    press="onPressNavigateToPage('Calendar')" class="phButton" type="Emphasized"/>
                                <Button icon="{i18n>iEmail}" text="{i18n>btnSendEmail}"
                                    press="onPressSendEmail" class="phButton sapUiSmallMarginBegin"/>
                            </HBox>
                        </VBox>
                        <IllustratedMessage illustrationType="sapIllus-Survey" title=" "
                            description=" " 
                            illustrationSize="Scene" class="phIllustratedMessage phHiddenIllustrationTexts sapUiSmallMarginTop">
                            <additionalContent>
                                <Button icon="/resource/image/GitHub.svg" iconDensityAware="false"
                                    type="Transparent" press="openLink('https://github.com/harelyshau')"/>
                                <Button icon="/resource/image/LinkedIn.png" iconDensityAware="false"
                                    type="Transparent" class="sapUiTinyMarginBegin" press="openLink('https://linkedin.com/in/harelyshau')"/>
                                <Button icon="/resource/image/Telegram.svg" iconDensityAware="false"
                                    type="Transparent" class="sapUiTinyMarginBegin" press="openLink('https://t.me/harelyshau')"/>
                            </additionalContent>
                        </IllustratedMessage>
                    </HBox>
                </Panel>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>