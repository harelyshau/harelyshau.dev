<mvc:View xmlns:core="sap.ui.core"
    controllerName="pharelyshau.controller.Game"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
    xmlns:cc="pharelyshau.control">
	<f:DynamicPage>
        <!-- HEADER -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>ttlGames}" wrapping="true"/>
				</f:heading>
				<f:snappedContent>
                    <Label text="{i18n>lTryTicTacToe}" wrapping="true"/>
                </f:snappedContent>
                <f:expandedContent>
                    <Label text="{i18n>lTryTicTacToe}" wrapping="true"/>
                </f:expandedContent>
                <f:actions>
                    <Button icon="{i18n>iMenu}" press="onPressToggleSideNavigation('games')"/>
                </f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<VBox class="sapUiSmallMarginBottom" alignItems="Center" renderType="Bare" width="100%">
                <f:GridList inset="true" includeItemInSelection="true">
					<CustomListItem class="sapUiMediumMarginEnd">
						<VBox class="sapUiSmallMargin">
							<HBox>
								<Avatar displaySize="L" displayShape="Square" src="{i18n>iFlag}"/>
								<VBox class="sapUiSmallMarginBegin">
									<Title text="{i18n>ttlMinesweeper}" titleStyle="H4"/>
									<Text text="{i18n>tMinesweeperDescription} {i18n>tMinesweeperObjective}"/>
								</VBox>
							</HBox>
							<Button text="{i18n>lTryMinesweeper}" class="sapUiTinyMarginTop phButton"/>
						</VBox>
					</CustomListItem>
					<CustomListItem class="sapUiMediumMarginEnd">
						<VBox class="sapUiSmallMargin">
							<HBox>
								<Avatar displaySize="L" displayShape="Square" src="{i18n>iFlag}"/>
								<VBox class="sapUiSmallMarginBegin">
									<Title text="{i18n>ttlMinesweeper}" titleStyle="H4"/>
									<Text text="{i18n>tMinesweeperDescription} {i18n>tMinesweeperObjective}"/>
								</VBox>
							</HBox>
							<Button text="{i18n>lTryMinesweeper}" class="sapUiTinyMarginTop phButton"/>
						</VBox>
					</CustomListItem>
					<CustomListItem>
						<VBox class="sapUiSmallMargin">
							<HBox>
								<Avatar displaySize="L" displayShape="Square" src="{i18n>iFlag}"/>
								<VBox class="sapUiSmallMarginBegin">
									<Title text="{i18n>ttlMinesweeper}" titleStyle="H4"/>
									<Text text="{i18n>tMinesweeperDescription} {i18n>tMinesweeperObjective}"/>
								</VBox>
							</HBox>
							<Button text="{i18n>lTryMinesweeper}" class="sapUiTinyMarginTop phButton"/>
						</VBox>
					</CustomListItem>
				</f:GridList>
                <!-- INSTRUCTIONS -->
                <!-- <core:Fragment fragmentName="pharelyshau.fragment.Minesweeper.Instructions"
					type="XML" class="sapUiSmallMarginTop"/> -->
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>