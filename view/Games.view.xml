<mvc:View xmlns:core="sap.ui.core"
    controllerName="pharelyshau.controller.Game"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:cc="pharelyshau.control">
	<f:DynamicPage>
        <!-- HEADER -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>ttlGames}" wrapping="true"/>
				</f:heading>
				<f:snappedContent>
                    <Label text="{i18n>lTryTicTacToe}" wrapping="true"/>
                </f:snappedContent>
                <f:expandedContent>
                    <Label text="{i18n>lTryTicTacToe}" wrapping="true"/>
                </f:expandedContent>
                <f:actions>
                    <Button icon="{i18n>iMenu}" press="onPressToggleSideNavigation('games')"/>
                </f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<VBox class="sapUiSmallMarginBottom" alignItems="Center" renderType="Bare" width="100%">
                <f:GridList inset="true" includeItemInSelection="true">
					<f:customLayout>
						<grid:GridBasicLayout gridTemplateColumns="repeat(auto-fit, minmax(24rem, 1fr))" gridGap="2.5rem" />
					</f:customLayout>
					<f:GridListItem highlight="Error" press="navigateTo('Minesweeper')" type="Active">
						<VBox class="sapUiSmallMargin">
							<HBox>
								<VBox renderType="Bare">
									<Avatar displaySize="L" displayShape="Square" src="{i18n>iFlag}" backgroundColor="Accent3"/>
									<Button text="{i18n>btnPlay}" type="Negative" press="navigateTo('Minesweeper')"
										icon="sap-icon://begin" class="sapUiTinyMarginTop"/>
								</VBox>
								<VBox class="sapUiSmallMarginBegin">
									<Title text="{i18n>ttlMinesweeper}" titleStyle="H4"/>
									<Text text="{i18n>tMinesweeperDescription} {i18n>tMinesweeperObjective}"/>
								</VBox>
							</HBox>
						</VBox>
					</f:GridListItem>
					<f:GridListItem highlight="Warning" press="navigateTo('TicTacToe')" type="Active">
						<VBox class="sapUiSmallMargin">
							<HBox>
								<VBox renderType="Bare">
									<Avatar displaySize="L" displayShape="Square" src="{i18n>iTicTacToe}" backgroundColor="Accent1"/>
									<Button text="{i18n>btnPlay}" type="Critical" press="navigateTo('TicTacToe')"
										icon="sap-icon://begin" class="sapUiTinyMarginTop"/>
								</VBox>
								<VBox class="sapUiSmallMarginBegin">
									<Title text="{i18n>ttlTicTacToe}" titleStyle="H4"/>
									<Text text="{i18n>tGameDescription}"/>
								</VBox>
							</HBox>
						</VBox>
					</f:GridListItem>
					<f:GridListItem highlight="Success" press="navigateTo('HanoiTower')" type="Active">
						<VBox class="sapUiSmallMargin">
							<HBox>
								<VBox renderType="Bare">
									<Avatar displaySize="L" displayShape="Square" src="{i18n>iHanoiTower}" backgroundColor="Accent8"/>
									<Button text="{i18n>btnPlay}" type="Success" press="navigateTo('HanoiTower')"
										icon="sap-icon://begin" class="sapUiTinyMarginTop"/>
								</VBox>
								<VBox class="sapUiSmallMarginBegin">
									<Title text="{i18n>ttlHanoiTower}" titleStyle="H4"/>
									<Text text="{i18n>tGameDescription}"/>
								</VBox>
							</HBox>
						</VBox>
					</f:GridListItem>
				</f:GridList>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>